<!DOCTYPE html>
<html lang="es">
<!-- HEAD -->
<%- include('./partials/head') %>


<body>
    <!-- HEADER -->
    <%- include('./partials/header') %>


    <main class="home">
        <div class="carrousel">
            <div class="flechal">
                <i class="fas fa-angle-left"></i>
            </div>
            
                <img class="c1" src="../images/carrousel/relojC.png" alt="">
            
                <img class="c2" src="../images/carrousel/lamparaC.png" alt="">
            
                <img class="c3" src="../images/carrousel/portaVelaC.png" alt="">
            
            <div class="flechar">
                <i class="fas fa-angle-right"></i>
            </div>
        </div>
        <section>

            <% productos.map(producto => { %>
                <article>
                    <div class="imagen">
                        <img src="../images/productos/<%= producto.imagen %>" alt="">
                    </div>
                    <div class="art2">
                        <p class="descripcion">
                            <%= producto.Nombre %>
                        </p>
                        <p class="precio">
                            <%= producto.precio %>
                        </p>
                        <div class="icons2">
                            <i class="fas fa-heart"></i>
                            <i class="fas fa-shopping-cart"></i>
                        </div>
                    </div>
    
                </article>
        
                <% }) %> 


        </section>

        <div class="top">
            <a href="#"><i class="fas fa-chevron-circle-up"></i></a>
        </div>

    </main>

    <!-- FOOTER -->
    <%- include('./partials/footer') %>

</body>
</html>