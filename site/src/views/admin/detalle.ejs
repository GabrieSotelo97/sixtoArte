<!DOCTYPE html>
<html lang="es">
<!-- HEAD -->
<%- include('../partials/head') %> 
<body class="detalleAdm">
    <!-- HEADER -->
    <%- include('../partials/header') %> 
    <main>
        <div class="color"></div>
            <section class="principio">
                            
                            <article class="producto">
                                <img src="/images/productos/<%= imagen.name %>" alt="">
                                <div class="fotos">
                                    <span>1/1</span>
                                 </div> 
                                 <i class="fas fa-search-plus"></i>
                            </article>
                            <article class="cont-right">
                                <div class="descripcion">
                                    <h2>Nombre del Producto:</h2> <h4 style="text-transform: uppercase"><%= producto.name %></h4> 
                                    <h2> Descripcion:</h2> <h4 style="text-transform: uppercase"> <%= producto.description%> </h4>                                   
                                    <h2>Precio:</h2> <h4><%= producto.price  %></h4> 
                                </div>                                                
                        <div class="comprar">               
                                
                                

                                <div class="editar">
                                    <a href="/admin/edit/<%= producto.id %>">Editar Producto<i class="far fa-edit"></i></a>                                                                         
                                </div>                                                            
                        </div>
                        <div class="trash">     
                            <form action="/admin/delete/<%= producto.id %>?_method=DELETE" method="POST" id="formEliminar">
                                <button type="submit" >Eliminar<i class="far fa-trash-alt"></i></button>
                            </form>                                        
                                                                              
                            </div>                    
                    </article>                    
                    <article class="pedidos">
                        <div >                                 
                                <h3><%=producto.related %></h3>

                                                                                                                    
                            </div>
                    </article>
                    
            </section>            
        </main>
        <script src="/javascripts/alertEliminarProduct.js"></script>
        <script src="//cdn.jsdelivr.net/npm/sweetalert2@11"></script>
   </body>
</html>